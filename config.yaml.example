# Example Hugo Configuration for Embed Consent Plugin (YAML)
# Copy the params.embedConsent section to your site's config.yaml

# ==============================================
# Embed Consent Plugin Configuration
# ==============================================

params:
  embedConsent:
    # Enable localStorage to remember user preferences across visits
    # Set to false to require consent on every page load (stricter privacy)
    enableLocalStorage: true

    # Show "Always allow" checkbox in consent overlay
    # Only applies when enableLocalStorage is true
    # Set to false to hide the checkbox and require per-embed consent
    showAlwaysAllowOption: true

    # Default language for consent text and UI labels
    # Supported values: "en" (English), "de" (German)
    # Individual shortcodes can override this with custom text
    language: en

    # Optional: Link to your privacy policy page
    # Will be displayed as "Learn more" link in consent overlay
    # Leave empty to hide the privacy policy link
    privacyPolicyUrl: /privacy/


